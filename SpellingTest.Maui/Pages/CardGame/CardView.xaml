<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             MinimumHeightRequest="80"
             BackgroundColor="Black"
             x:Class="SpellingTest.Maui.Pages.CardGame.CardView">
    <ContentView.Content>
        <StackLayout Margin="2" BackgroundColor="White">
            <Image  VerticalOptions="Center"   Source="{Binding Image}"  IsVisible="{Binding ShowImage}" />

            <Label Text="{Binding Name}" HorizontalTextAlignment="Center" IsVisible="{Binding ShowName}"/>
        </StackLayout>
    </ContentView.Content>
</ContentView>